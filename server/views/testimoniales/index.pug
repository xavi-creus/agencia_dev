extends ../layout/index
block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}
        .row
            .col-md-12
                .row.testimoniales
                    each testimonial in testimoniales
                        .col-md-6.col-lg-4.mb-4
                            .card
                                .card-body
                                    blockquote.blockquote
                                    p.mb-0
                                        | #{testimonial.mensaje}
                                    footer.blockquote-footer
                                        | #{testimonial.nombre}
            .col-md-12
                h2.text-center agrega un Testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(id="nombre", type="text", class="form-control", placeholder="Tu nombre", name="nombre", value=nombre)
                            .form-group
                                label(for="correo") Mail
                                input(id="correo", type="text", class="form-control", placeholder="Tu correo", name="correo", value=correo)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(class="form-control mb-4", name="mensaje", cols="30", rows="4", placeholder="Tu testimonio")=mensaje
                            input.btn.btn-success.btn-block(type="submit", class="mb-5", value="Agregar")